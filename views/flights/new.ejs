<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<%- include("../partials/footer") %>


<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input">
    <label for="flightNo-input">Flight #:</label>
    <input type="number" name="flightNo" id="flightNo-input">
    <label for="depart-input">Departs:</label>
    <input type="date" name="depart" id="depart-input">
    <label for="departure-time-input">Departure Time:</label>
    <input type="time" name="departure-time" id="departure-time-input" checked>
    <button type="submit">Add Flight</button>
  </form>
</main>